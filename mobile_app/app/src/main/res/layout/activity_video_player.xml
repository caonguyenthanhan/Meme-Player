<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:show_shuffle_button="false"
        app:show_subtitle_button="false"
        app:use_controller="false" />

    <!-- Video title overlay -->
    <TextView
        android:id="@+id/video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="16dp"
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:textSize="18sp"
        android:shadowColor="#88000000"
        android:shadowDx="0.5"
        android:shadowDy="0.5"
        android:shadowRadius="2"
        android:background="#80000000"
        android:padding="12dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Video Title"
        android:visibility="visible" />

    <!-- Subtitle overlay -->
    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:textSize="18sp"
        android:shadowColor="#88000000"
        android:shadowDx="0.5"
        android:shadowDy="0.5"
        android:shadowRadius="2"
        android:background="#B3000000"
        android:padding="12dp"
        android:maxLines="4"
        android:visibility="gone" />

    <!-- Volume indicator overlay -->
    <LinearLayout
        android:id="@+id/volume_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#CC000000"
        android:padding="16dp"
        android:visibility="gone">
        
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            app:tint="#FFFFFF" />
            
        <TextView
            android:id="@+id/volume_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:text="50%" />
    </LinearLayout>

    <!-- Brightness indicator overlay -->
    <LinearLayout
        android:id="@+id/brightness_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="32dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#CC000000"
        android:padding="16dp"
        android:visibility="gone">
        
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_dialog_info"
            app:tint="#FFFFFF" />
            
        <TextView
            android:id="@+id/brightness_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:text="50%" />
    </LinearLayout>

    <!-- Controls overlay -->
    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#00000000"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_seek_back_10m"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="back10m"
                android:src="@android:drawable/ic_media_rew" />

            <ImageButton
                android:id="@+id/btn_seek_back_1m"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="back1m"
                android:src="@android:drawable/ic_media_rew" />

            <ImageButton
                android:id="@+id/btn_seek_back_10s"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="back10s"
                android:src="@android:drawable/ic_media_rew" />

            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:contentDescription="playpause"
                android:src="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/btn_seek_forward_10s"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="forward10s"
                android:src="@android:drawable/ic_media_ff" />

            <ImageButton
                android:id="@+id/btn_seek_forward_1m"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="forward1m"
                android:src="@android:drawable/ic_media_ff" />

            <ImageButton
                android:id="@+id/btn_seek_forward_10m"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="forward10m"
                android:src="@android:drawable/ic_media_ff" />

            <ImageButton
                android:id="@+id/btn_rotate"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="rotate"
                android:src="@android:drawable/ic_menu_always_landscape_portrait" />

            <ImageButton
                android:id="@+id/btn_pip"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="pip"
                android:src="@android:drawable/picture_frame" />

            <ImageButton
                android:id="@+id/btn_hide_controls"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="hide"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
        </LinearLayout>

        <!-- Labels for seek buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView style="@android:style/TextAppearance.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10p" android:padding="2dp" android:textSize="10sp" />
            <TextView style="@android:style/TextAppearance.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1p" android:padding="2dp" android:textSize="10sp" />
            <TextView style="@android:style/TextAppearance.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10s" android:padding="2dp" android:textSize="10sp" />
            <TextView style="@android:style/TextAppearance.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:padding="16dp" />
            <TextView style="@android:style/TextAppearance.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10s" android:padding="2dp" android:textSize="10sp" />
            <TextView style="@android:style/TextAppearance.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1p" android:padding="2dp" android:textSize="10sp" />
            <TextView style="@android:style/TextAppearance.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10p" android:padding="2dp" android:textSize="10sp" />
            <TextView style="@android:style/TextAppearance.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="xoay" android:padding="2dp" android:textSize="10sp" />
            <TextView style="@android:style/TextAppearance.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PiP" android:padding="2dp" android:textSize="10sp" />
            <TextView style="@android:style/TextAppearance.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ẩn" android:padding="2dp" android:textSize="10sp" />
        </LinearLayout>

        <!-- Timeline -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp">
            <TextView
                android:id="@+id/txt_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:text="00:00" />
            <SeekBar
                android:id="@+id/seek_timeline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="1000" />
            <TextView
                android:id="@+id/txt_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:text="00:00" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/speed_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_minus_025"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="-0.25"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_minus_01"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="-0.1"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/txt_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="1.00x"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp" />
            <Button
                android:id="@+id/btn_plus_01"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="+0.1"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_plus_025"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="+0.25"
                android:textSize="12sp" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false">
            <LinearLayout
                android:id="@+id/preset_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp" />
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_pick_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Chọn phụ đề (.srt)"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_edit_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:text="Chỉnh sửa"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>


